pipeline {
    agent any
    environment {
        // --- APPLICATION ENVIRONMENT VARIABLES ---
        FRONTEND_URL='http://localhost:3000'
        MONGODB_URI='mongodb://localhost:27017/chatapp'
        JWT_SECRET_KEY='jhdcjhsdvchjsdhbfasdgbvs'
        REACT_APP_CLOUDINARY_CLOUD_NAME = 'dd4osfetw'
        REACT_APP_BACKEND_URL = 'http://localhost:8080'
        PORT='8080'
        
        // CRITICAL: Path to the portable kubeconfig file on your Windows Jenkins machine.
        // NOTE: The content of this file MUST use 'https://host.docker.internal:<port>'
        //       for the Minikube server address.
        KUBECONFIG = 'C:\\ProgramData\\Jenkins\\.kube\\config' 
    }
    stages {
        stage('Clone Git') {
            steps {
                git branch: 'master', url: 'https://github.com/gaganreddy23/chat_app_repo'
            }
        }
        
        stage('Build Frontend Image') {
            steps {
                dir('SPE_Majorproject-main/client'){ 
                    bat "npm install"
                    bat 'docker build -t frontend-image --no-cache .'
                }
            }
        }
        stage('Build Backend Image') {
            steps {
                dir('SPE_Majorproject-main/server'){ 
                    bat "npm install"
                    bat 'docker build -t backend-image .'
                }
            }
        }
        stage('Push to Docker Hub') {
            steps {
                script {
                    bat "docker login --username gaganreddy508 --password Gaganreddy22?"
                    bat 'docker tag frontend-image gaganreddy508/frontend-image:latest'
                    bat 'docker push gaganreddy508/frontend-image:latest'
                    bat "docker tag backend-image gaganreddy508/backend-image:latest"
                    bat "docker push gaganreddy508/backend-image:latest"
                }
            }
        }
        
        stage('Kubernetes Deployment') {
            steps {
                script {
                    dir('SPE_Majorproject-main') {
                        // 1. Copy the config and ALL certificates to the workspace
                        // We try both common Minikube locations for certs
                        bat '''
                        copy "C:\\Users\\mgaga\\.kube\\config" "k8s-config"
                        copy "C:\\Users\\mgaga\\.minikube\\ca.crt" "ca.crt" /Y
                        if exist "C:\\Users\\mgaga\\.minikube\\profiles\\minikube\\client.crt" (
                            copy "C:\\Users\\mgaga\\.minikube\\profiles\\minikube\\client.crt" "client.crt" /Y
                            copy "C:\\Users\\mgaga\\.minikube\\profiles\\minikube\\client.key" "client.key" /Y
                        ) else (
                            copy "C:\\Users\\mgaga\\.minikube\\client.crt" "client.crt" /Y
                            copy "C:\\Users\\mgaga\\.minikube\\client.key" "client.key" /Y
                        )
                        '''
                        
                        // 2. Fix the config to point to the certs inside /workspace
                        bat """
                        docker run --rm -v "%cd%":/workspace cytopia/ansible:latest sh -c "cp /workspace/k8s-config /tmp/kubeconfig && sed -i 's/127.0.0.1/host.docker.internal/g' /tmp/kubeconfig && sed -i 's/localhost/host.docker.internal/g' /tmp/kubeconfig && sed -i 's|certificate-authority:.*|certificate-authority: /workspace/ca.crt|g' /tmp/kubeconfig && sed -i 's|client-certificate:.*|client-certificate: /workspace/client.crt|g' /tmp/kubeconfig && sed -i 's|client-key:.*|client-key: /workspace/client.key|g' /tmp/kubeconfig && export KUBECONFIG=/tmp/kubeconfig && pip3 install kubernetes pyyaml && cd /workspace && ansible-playbook -i inventory-k8 playbook-k8.yml --extra-vars 'ansible_python_interpreter=/usr/bin/python3'"
                        """
                    }
                }
            }
        }
    }
}